<idea-plugin>

  <id>org.intellij.sdk.action</id>

  <name>Statistics</name>

  <depends>com.intellij.modules.platform</depends>

  <vendor url="https://plugins.jetbrains.com">IntelliJ Platform SDK</vendor>

  <resource-bundle>messages.BasicActionsBundle</resource-bundle>

  <actions>
    <action id="org.intellij.sdk.action.PopupStatisticsAction" class="org.intellij.sdk.action.PopupStatisticsAction"
            text="Plugin: Statistics" description="Statistics"
            icon="Icons.popup_statistics_action_icon">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <override-text place="MainMenu" text="Statistics"/>
      <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>
